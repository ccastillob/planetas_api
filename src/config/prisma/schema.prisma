generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Planeta {
  id                 String              @id @default(auto()) @map("_id") @db.ObjectId
  nombre             String
  descripcion        String
  enlaceWikipedia    String
  planetaEstadistica PlanetaEstadistica?
}

model PlanetaEstadistica {
  id                   String  @id @default(auto()) @map("_id") @db.ObjectId
  tiempo_rotacion      String
  tiempo_resolucion    String
  radio                String
  temperatura_promedio String
  planeta              Planeta @relation(fields: [planetaId], references: [id])
  planetaId            String  @unique @db.ObjectId
}

